{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "plugins": [
    "transform-es2015-destructuring",
    "transform-object-rest-spread"
  ],
  "rules": {
    "no-multiple-empty-lines": "error",
    "no-process-env": "off",
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "semi": [
      2,
      "always"
    ],
    "no-trailing-spaces": "error"
  }
}