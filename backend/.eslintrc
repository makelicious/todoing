{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "amd": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-multiple-empty-lines": "error",
    "no-process-env": "off",
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "semi": [
      2,
      "always"
    ]
  }
}